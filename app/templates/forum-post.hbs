<div class="container-fluid">
  <div class="row">
    <div class="col-xs-2" />
    <div class="col-xs-8">

      <!-- post details -->
      <div class="col-xs-1" />
      <div class="col-xs-10 post-inner">
        <div class="post-content-inner">
          <p class="post-title">{{model.title}}</p>
          <p class="post-text">{{model.text}}</p>
          <p class="post-comments">{{model.commentsCount}} comments </p>
          <span {{action 'replyPost'}} class="reply-post pull-right"> Reply <i class="fa fa-reply"></i></span>
          <p class="post-author">Submitted by {{model.user.name}} | {{ago model.createdAt}}</p>
        </div>
      </div>
      <div class="col-xs-1" />

    </div>
    <div class="col-xs-2" />
  </div>

  {{#if replyPost}}
    <div class="row" style="margin-top:15px">
      <div class="col-xs-2" />
      <div class="col-xs-8">
        {{forum-new-comment submit="submit" cancel="cancel" model=model isRootComment=true}}
      </div>
      <div class="col-xs-2" />
    </div>
  {{/if}}

  {{#each model.comments as |comment|}}
    <hr class="divider" width="1000">

    <div class="row comment-row">
      <div class="col-xs-2" />
      <div class="col-xs-8">

        <!-- comment -->
        <div class="col-xs-1" />
        <div class="col-xs-10">
          {{forum-comment showReplies="showReplies" replyComment="replyComment" comment=comment}}

          {{#if comment.showingReplyBox}}
            <div class="row" style="margin-top:15px">
              {{forum-new-comment submit="submit" cancel="cancel" model=comment isRootComment=false}}
            </div>
          {{/if}}
        </div>
        <div class="col-xs-1" />

      </div>
      <div class="col-xs-2" />
    </div>
  {{/each}}
</div>

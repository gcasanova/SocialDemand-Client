<div class="container-fluid">
  <div class="row">
    <div class="col-xs-2" />
    <div class="col-xs-8">

      <!-- post details -->
      <div class="col-xs-1" />
      <div class="col-xs-10 post-inner">
        <div class="post-content-inner">
          <p class="post-title">{{model.title}}</p>
          <p class="post-text">{{model.text}}</p>
          <p class="post-comments">{{model.commentsCount}} comments</p>
          <p class="post-author">Submitted by {{model.user.name}} | {{ago model.createdAt}}</p>
        </div>
      </div>
      <div class="col-xs-1" />

    </div>
    <div class="col-xs-2" />
  </div>

  {{#each model.comments as |comment|}}
    <hr class="divider" width="1000">

    <div class="row comment-row">
      <div class="col-xs-2" />
      <div class="col-xs-8">

        <!-- comment -->
        <div class="col-xs-1" />
        <div class="col-xs-10">
          {{forum-comment action="showReplies" comment=comment}}
        </div>
        <div class="col-xs-1" />

      </div>
      <div class="col-xs-2" />
    </div>

    <div id="replies-comment-{{comment.id}}" />
  {{/each}}
</div>

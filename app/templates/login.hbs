<div class="container-fluid">
	<div class="row">
		<div class="col-xs-4" />
		<div class="col-xs-4">
			<form class="login-form" {{action 'authenticate' on='submit'}}>
				<div class="form-group">
					{{input type="email" id='identification' placeholder='Email' value=identification class="form-control"}}
				</div>
				<div class="form-group">
					{{input id='password' placeholder='Password' type='password' value=password class="form-control"}}
				</div>
				<div class="login-form-last-row">
				 	<div class="checkbox remember-checkbox">
						<label class="remember"><input type="checkbox" checked> Remember me</label>
					</div>
					<span class="separator">Â·</span>
					{{link-to "Forgot password?" "login"}}
					{{link-to "Sign up" "sign" class="sign-up"}}
				</div>
				<div class="login-btn"><button type="submit" class="btn btn-default">Login</button></div>
			</form>
		</div>
		<div class="col-xs-4" />
	</div>
</div>
<div class="container-fluid">
	<div class="row">
		<div class="col-xs-4" />
		<div class="col-xs-4">


			{{#if madePhoneCall}}
				<form class="verification-form" {{action 'verify' on='submit'}}>
					{{#if verificationFailed}}
						<div class="alert alert-danger fade in">
							<strong>Error! </strong>{{errorMessageVerification}}
						</div>
					{{/if}}
					<div class="form-group">
						{{input type="text" id='verification' value=verification class="form-control" autofocus="autofocus"}}
					</div>
					<button id="verify-btn" type="submit" class="btn btn-primary">Verify Number</button>
				</form>
			{{else}}
				<form class="upgrade-form" {{action 'upgrade' on='submit'}}>
					{{#if upgradeFailed}}
						<div class="alert alert-danger fade in">
							<strong>Error! </strong>{{errorMessageUpgrade}}
						</div>
					{{/if}}

					<div class="form-group">
						{{input type="text" id='document' placeholder='Document Number - 00000000A' value=document class="form-control"}}
					</div>
					<div class="form-group">
						{{intl-tel-input allowExtensions=true value=value selectedCountryData=selectedCountryData number=number extension=extension numberType=numberType isValidNumber=isValidNumber validationError=validationError defaultCountry="auto" geoIpLookup=geoIpLookupFunc
						class="form-control"}}
					</div>
					<button id="upgrade-btn" type="submit" class="btn btn-primary">Upgrade Account</button>
				</form>
			{{/if}}
		</div>
		<div class="col-xs-4" />
	</div>
</div>
